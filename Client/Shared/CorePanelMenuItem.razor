@using Microsoft.AspNetCore.Components.Web
<Radzen.Blazor.RadzenPanelMenuItem Click="() => Click.InvokeAsync()" Icon="@IconText" Visible="@Visible" Value="@Value" Text="@Text">
    @ChildContent
</Radzen.Blazor.RadzenPanelMenuItem>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> Click { get; set; }

    [Parameter]
    public Icon? Icon { get; set; }

    private string? IconText { get; set; }

    [Parameter]
    public string? Text { get; set; }

    [Parameter]
    public object? Value { get; set; }

    [Parameter]
    public bool Visible { get; set; } = true;

    protected override Task OnInitializedAsync()
    {
        if (Icon != null)
            IconText = IconNameAttribute.GetIconName(Icon);

        return base.OnInitializedAsync();
    }
}
