<CoreRouter>
    <FoundContent Context="routeData">
        <CoreRouteView DefaultLayout="typeof(MainLayout)" />
    </FoundContent>
    <NotFoundContent>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFoundContent>
</CoreRouter>
